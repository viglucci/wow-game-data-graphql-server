{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "typeRoots": ["./src/types/**/*", "./node_modules/@types/"],
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "compileOnSave": false,
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
